 <%# ヘッダー %>
<div class="header">
  <div class="header-title">
     <%= link_to 'ITDB 情報技術データベース', root_path, class: "title" %>
  </div>
  <div class="new-page">
    <%= link_to '新規投稿', new_article_path, class: "myButton" %>
  </div>
  <div class="search">
  </div>
  <%# devise機能 %>
  <div class="sign_up">
    <p class="admin">管理者用</p>
    <ul class='lists-right'>
      <% if user_signed_in? %>
      <li class="devise"><%= link_to current_user.nickname, "#", class: "user-nickname" %> </li> 
      <li class="devise"><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li> 
      <% else %>
      <li class="devise"><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
      <li class="devise"><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</div>


<%= form_with model: @user, url: user_session_path, class: 'registration-mains', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      管理者情報入力
    </h1>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"例）admin@gmail.com", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
  </div>
  <div class='login-btn'>
    <%= f.submit "ログイン" ,class:"login-red-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/homefooter" %>